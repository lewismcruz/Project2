    <div class="container">    
    <div id="signupbox" style="margin-top:50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
        <div class="panel panel-info">
          <div class="panel-heading">
              <div class="panel-title">
                <h2>Sign Up</h2>
                </div>
          </div>     
          <div style="padding-top:30px" class="panel-body" >
          <div style="display:none" id="signin-alert" class="alert alert-danger col-sm-12">
          </div>
                    
    <form id="signup" class="form-horizontal" role="form">             
            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon">
                <i class="glyphicon glyphicon-user"> 
                </i>
              </span>
                <input id="email-input" type="text" class="form-control" name="useremail" placeholder="Email">                                        
            </div>
            <div style="margin-bottom: 25px" class="input-group">
              <span class="input-group-addon">
                <i class="glyphicon glyphicon-lock">
                </i>
              </span>
              <input id="password-input" type="password" class="form-control" name="password" placeholder="Password">
          </div>     
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock">
              </i>
            </span>
          <label for="firstname" class="col-md-12 control-label">First Name</label>
              <input id="firstName-input" type="text" class="form-control" name="firstname" placeholder="First Name">
          </div>
            <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock">
              </i>
            </span>
          <label for="lastname" class="col-md-12 control-label">Last Name</label>
              <input id="lastName-input"  type="text" class="form-control" name="lastname" placeholder="Last Name">
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock">
              </i>
            </span>
          <label for="height" class="col-md-12 control-label">Height</label>
              <input id="height-input" type="text" class="form-control" name="height" placeholder="Height">
          </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock">
              </i>
            </span>
        <label for="weight" class="col-md-12 control-label">Weight</label>
            <input id="weight-input" type="text" class="form-control" name="weight" placeholder="Weight">
        </div>
          <div style="margin-bottom: 25px" class="input-group">
            <span class="input-group-addon">
              <i class="glyphicon glyphicon-lock">
              </i>
              </span>
          <label for="gender" class="col-md-12 control-label">Gender</label>
              <input id="gender-input" type="text" class="form-control" id="gender-input" name="gender" placeholder="Gender">
        </div>
